{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "XV6",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv-emu",
                    "--package=rv-emu"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [
                "apps/xv6-riscv/kernel/kernel",
                "--elf",
                "--base-addr",
                "2147483648",
                "--loop-on",
                "-c",
                "100000",
                "-o",
                "log/output_kernel.log"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "info"
            },
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "XV6 snapshot",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv-emu",
                    "--package=rv-emu"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [
                "apps/xv6-riscv/kernel/kernel",
                "--elf",
                "--base-addr",
                "2147483648",
                "--loop-on",
                "-c",
                "100000",
                "-o",
                "log/output_kernel.log",
                "--snapshot",
                "log/snapshot_1000000.bin"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "exception.s",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv-emu",
                    "--package=rv-emu"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [
                "apps/exception.elf",
                "--elf",
                "-c",
                "100",
                "-d",
                "1",
                "-o",
                "log/output_exception.log"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rv-emu'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rv-emu",
                    "--package=rv-emu"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Make XV6 GDB",
            "program": "/projects/target/release/rv-emu",
            "args": [
                "apps/xv6-riscv/kernel/kernel",
                "--elf",
                "--base-addr",
                "2147483648",
                "--loop-on",
                "-c",
                "100000",
                "-o",
                "log/output_kernel.log",
                "--gdb"
            ],
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/opt/riscv/bin/riscv64-unknown-elf-gdb",
            "miDebuggerServerAddress": "0.0.0.0:9001",
            "initCommands":["settings set target.disable-aslr false"]
        },
        {
            "type": "lldb",
            "request": "attach",
            "name": "Make XV6 GDB attach",
            "program": "/projects/apps/xv6-riscv/kernel/kernel",
            "miDebuggerPath": "/opt/riscv/bin/riscv64-unknown-elf-gdb",
            "miDebuggerServerAddress": "0.0.0.0:9001",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Relace absolute path of source code",
                    "ignoreFailures": false,
                    "text": "set substitute-path /home/katsuhiro/share/falcon z:/"
                }
            ]
        }
    ]
}