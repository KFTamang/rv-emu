{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "XV6",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv-emu",
                    "--package=rv-emu",
                    "--release"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [
                "apps/xv6-riscv/kernel/kernel",
                "--elf",
                "--base-addr",
                "2147483648",
                "--loop-on",
                "--dump",
                "100000000",
                "--image",
                "apps/xv6-riscv/fs.img",
                "-o",
                "log/output_kernel.log"
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "RUST_LOG": "debug"
            },
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "XV6 snapshot",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv-emu",
                    "--package=rv-emu",
                    "--release"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [
                "apps/xv6-riscv/kernel/kernel",
                "--elf",
                "--base-addr",
                "2147483648",
                "--loop-on",
                "--dump",
                "100000000",
                "-o",
                "log/output_kernel.log",
                "--snapshot",
                "log/snapshot_400000000.bin"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "exception.s",
            "cargo": {
                "args": [
                    "build",
                    "--bin=rv-emu",
                    "--package=rv-emu"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [
                "apps/exception.elf",
                "--elf",
                "-c",
                "100",
                "-d",
                "1",
                "-o",
                "log/output_exception.log"
            ],
            "cwd": "${workspaceFolder}",
            "initCommands": [
                "settings set target.disable-aslr false"
            ]
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'rv-emu'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=rv-emu",
                    "--package=rv-emu"
                ],
                "filter": {
                    "name": "rv-emu",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "Make XV6 GDB",
            "program": "/projects/apps/xv6-riscv/kernel/kernel",
            "cwd": "${workspaceFolder}",
            "miDebuggerPath": "/opt/riscv/bin/riscv64-unknown-elf-gdb",
            "miDebuggerServerAddress": "localhost:9001",
            "MIMode": "gdb",
            "stopAtConnect": true,
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}